<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimuladoAluno.Done"
    android:background="@android:color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGroup"
        android:paddingTop="10dp"
        android:orientation="vertical"
        >



    </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/txtTotalScore"
        android:layout_width="261dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtTotalQuestion"
        android:layout_marginTop="159dp"
        android:fontFamily="@font/roboto_light"
        android:text="Score : 00 points"
        android:textColor="@android:color/primary_text_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtTotalQuestion"
        android:layout_width="163dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Passed : 0/30 "
        android:textSize="20sp" />

    <ProgressBar

        android:id="@+id/doneProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


    <ImageView
        android:id="@+id/cartolabtn"
        android:layout_width="221dp"
        android:layout_height="215dp"
        android:layout_below="@+id/doneProgressBar"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>